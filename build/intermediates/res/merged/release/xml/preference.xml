<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListPreference
        android:title="User settings"
        android:summary="Change user settings"/>

    <ListPreference
        android:key="bitRatePref"
        android:title="Change bit rate"
        android:summary="Select an option to change the bit rate"
        android:defaultValue="1"
        android:entries="@array/bitRateArray"
        android:entryValues="@array/bitRateValues" />

</PreferenceScreen>
